<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="ferreira" translate="label" sortOrder="1">
            <label>Ferreira</label>
        </tab>
        <section id="ferreira_product_select" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Ferreira Selected</label>
            <tab>ferreira</tab>
            <resource>Ferreira_ChangeQty::config_product_select</resource>

            <group id="config_product_select_sku" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                <label>Configuration for set special product by sku </label>
                <field id="product_select_sku" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Inform the Product SKU</label>
                    <config_path>ferreira_changeprice/general/special_product_sku</config_path>
                </field>
            </group>
        </section>
    </system>
</config>
